	function switchContent(id) {
		var url = "index-product.html";
		switch (id) {
		case "mallOnLine":
			url = "shopOnline.html";
			break;
		case "introduction":
			url = "about.html";
			break;
		case "contactUs":
			url = "contact.html";
			break;
		case "faqs":
			url = "faq.html";
			break;
		}
		$("#main_iframe").attr("src", url);
	}
	var h = 
	function init(height){
			
			
			document.getElementById("main_iframe").style.height = height;


	}
	
	
